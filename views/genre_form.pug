extends layout 
block content 
    h1= title 
    form(method="post") 
        div.form-group
            label(for="name" name="name") Name:
            input(type="text" name="name" required value=(undefined===genre ? "" : genre.name))
        button.btn.btn-primary(type='submit') Submit

        if errors
            ul
                for error in errors
                    li!= error.msg